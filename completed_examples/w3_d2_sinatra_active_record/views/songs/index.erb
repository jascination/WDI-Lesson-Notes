<h2>Songs</h2>

<a class="btn" href="/songs/new">Add Song</a>

<div class="songs">
  <div class="row">
    <ul>
      <% @songs.each do |song| %>
      <li>
        <a href="/songs/<%= song.id %>">
          <%= song.title %> - <%= Artist.find(song.artist_id).name %>
        </a>
      </li>
      <li>
        <a href="/songs/<%= song.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <form method="/songs/<%= song.id %>/delete" action="post">
          <button>Delete</button>
        </form>
      </li>
      <% end %>
    </ul>
  </div>
</div>