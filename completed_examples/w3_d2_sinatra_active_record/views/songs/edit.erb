<h2>Edit Song</h2>

<form action="/songs/<%= @song.id %>/update" method="post">
  <label for="song[title]">Title:</label>
  <input name="song[title]" value="<%= @song.title %>">
  <br>
  <label for="song[album]">Album:</label>
  <input name="song[album]" value="<%= @song.album %>">
  <br>
  <label for="song[preview_url]">Preview URL:</label>
  <input name="song[preview_url]" value="<%= @song.title %>">
  <br>
  <label for="song[price]">Price (cents):</label>
  <input name="song[price]" value="<%= @song.price %>">
  <br>
  <input type="submit" value="Update">
</form>
